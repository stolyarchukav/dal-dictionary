<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/texture">
    
    <ScrollView	android:layout_width="fill_parent" 
    	android:layout_height="fill_parent">
		
		<LinearLayout android:id="@+id/main_layout"
			android:orientation="vertical" 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
    
    		<TextView android:id="@+id/author"
    			android:layout_width="fill_parent" 
    			android:layout_height="wrap_content"
    			android:text="@string/author"
    			android:textSize="16sp"
    			android:textColor="#000000"
    			android:gravity="center_horizontal" />
    			
    		<ImageView android:id="@+id/main_image"
   				android:src="@drawable/portrait"
   				android:layout_width="fill_parent"
   				android:layout_height="wrap_content" 
   				android:gravity="center_horizontal" 
   				android:layout_margin="5px" />
   				
    		<TextView android:id="@+id/title"  
    			android:layout_width="fill_parent" 
    			android:layout_height="wrap_content"
    			android:text="@string/title"
    			android:textSize="18sp"
    			android:textStyle="bold"
    			android:textColor="#000000"
    			android:gravity="center_horizontal" />
    			
    		<LinearLayout android:orientation="horizontal" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
    			
    			<Button android:id="@+id/browse"
        			android:layout_width="fill_parent"
        			android:layout_height="wrap_content"
        			android:layout_weight="0.5"
			        android:background="@drawable/selector_dashboard_button"
        			android:drawableTop="@drawable/alphabet"
        			android:textSize="20sp"
        			android:textColor="#000000"
			        android:drawablePadding="-5dp"
        			android:text="@string/browse" />
        			
        		<Button android:id="@+id/search"
        			android:layout_width="fill_parent"
        			android:layout_height="wrap_content"
			        android:layout_weight="0.5"
			        android:background="@drawable/selector_dashboard_button"
        			android:drawableTop="@drawable/menu_search"
        			android:textSize="20sp"
        			android:textColor="#000000"
			        android:drawablePadding="-5dp"
        			android:text="@string/search" />
    			
    		</LinearLayout>

			<LinearLayout android:id="@+id/search_full_layout"
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/border_thin_black"
				android:layout_margin="3dp">

				<TextView
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="@string/search_full"
					android:textSize="14sp"
					android:padding="5dp"
					/>

				<LinearLayout android:orientation="horizontal"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:padding="5dp">

					<EditText android:id="@+id/search_full_text"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="0.9"
						android:hint="@string/search_string_empty"
					/>

					<Button android:id="@+id/search_full_button"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="0.1"
						android:background="@drawable/selector_dashboard_button"
						android:drawableTop="@drawable/menu_search_full"
						android:textColor="#000000"
						android:textSize="10sp"
						android:text="@string/do_search" />

				</LinearLayout>

			</LinearLayout>

    		<Button android:id="@+id/rate_app" 
    			android:layout_width="fill_parent" 
    			android:layout_height="wrap_content"
    			android:text="@string/rate_app"
    			android:gravity="center_horizontal|center_vertical"
				android:layout_marginTop="20dp"
                android:textColor="@color/black"
				android:background="@null" />
    		
    		<Button android:id="@+id/moreAppsButton"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:text="@string/main_more_apps" 
				android:gravity="center_horizontal|center_vertical" 
				android:layout_marginTop="10dp"
				android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:background="@null" />

    	</LinearLayout>
    	
    </ScrollView>
    
</LinearLayout>
