<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/texture">
    
    <ScrollView	android:layout_width="fill_parent" 
    	android:layout_height="fill_parent">
		
		<LinearLayout android:id="@+id/main_layout"
			android:orientation="vertical" 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
    
    		<TextView android:id="@+id/author"
    			android:layout_width="fill_parent" 
    			android:layout_height="wrap_content"
    			android:text="@string/author"
    			android:textSize="25sp"
    			android:textColor="#000000"
    			android:gravity="center_horizontal" />
    			
    		<ImageView android:id="@+id/main_image"
   				android:src="@drawable/portrait"
   				android:layout_width="fill_parent"
   				android:layout_height="wrap_content" 
   				android:gravity="center_horizontal" 
   				android:layout_margin="5px" />
   				
    		<TextView android:id="@+id/title"  
    			android:layout_width="fill_parent" 
    			android:layout_height="wrap_content"
    			android:text="@string/title"
    			android:textSize="30sp"
    			android:textStyle="bold"
    			android:textColor="#000000"
    			android:gravity="center_horizontal" />
    			
    		<LinearLayout android:orientation="horizontal" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
    			
    			<Button android:id="@+id/browse"
        			android:layout_width="fill_parent"
        			android:layout_height="wrap_content"
        			android:layout_weight="0.5"
			        android:background="@drawable/selector_dashboard_button"
        			android:drawableTop="@drawable/alphabet"
        			android:textSize="25sp"
        			android:textColor="#000000"
			        android:drawablePadding="-10sp"
        			android:text="@string/browse" />
        			
        		<Button android:id="@+id/search"
        			android:layout_width="fill_parent"
        			android:layout_height="wrap_content"
			        android:layout_weight="0.5"
			        android:background="@drawable/selector_dashboard_button"
        			android:drawableTop="@drawable/menu_search"
        			android:textSize="25sp"
        			android:textColor="#000000"
			        android:drawablePadding="-10sp"
        			android:text="@string/search" />
    			
    		</LinearLayout>	
    	
    		<Button android:id="@+id/rate_app" 
    			android:layout_width="fill_parent" 
    			android:layout_height="wrap_content"
    			android:text="@string/rate_app"
    			android:gravity="center_horizontal|center_vertical" 
    			android:layout_margin="30px"
                android:textColor="@color/black"
    			android:background="@null" />
    		
    		<Button android:id="@+id/moreAppsButton"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:text="@string/main_more_apps" 
				android:gravity="center_horizontal|center_vertical" 
				android:layout_marginTop="15px"
				android:layout_marginBottom="40px"
                android:textColor="@color/black"
                android:background="@null" />

    	</LinearLayout>
    	
    </ScrollView>
    
</LinearLayout>
